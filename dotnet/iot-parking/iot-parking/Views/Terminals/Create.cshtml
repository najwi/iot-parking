@model iot_parking.Models.Terminal

@{
    ViewData["Title"] = "Dodaj temrinal";
}

<h1>Dodaj</h1>

<h4>Terminal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TerminalNumber" class="control-label">Numer terminalu</label>
                <input asp-for="TerminalNumber" class="form-control"/>
                <span asp-validation-for="TerminalNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Typ</label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<TerminalTypes>()">
                    <option selected="selected" value="">Wybierz</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
